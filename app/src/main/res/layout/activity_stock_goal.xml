<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:id="@+id/layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/stock_layer" />

    <TextView
        android:id="@+id/port"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stock Market"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="42sp"
        app:fontFamily="sans-serif-condensed-medium"
        android:gravity="center"
        android:layout_marginTop="5dp"
        />

        <TextView
            android:id="@+id/saving"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/port"
            android:layout_marginTop="20dp"
            android:text="Target Amount"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/sav_input2"
            android:layout_width="256dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:layout_below="@id/saving"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/border_button"
            android:ems="10"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/time2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sav_input2"
            android:layout_marginTop="10dp"
            android:text="Years"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25dp" />



        <EditText
            android:id="@+id/time_input2"
            android:layout_width="261dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:layout_below="@id/time2"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/border_button"
            android:ems="10"
            android:layout_marginBottom="20dp"
            android:inputType="numberDecimal" />

    <Button
        android:id="@+id/calc_emi3"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_below="@id/time_input2"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/round_button"
        android:text="Recommend Stocks"
        android:textSize="18dp"
        android:textColor="@color/colorPrimaryDark" />
</LinearLayout>