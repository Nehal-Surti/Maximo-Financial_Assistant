<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   <LinearLayout
       android:layout_marginTop="80dp"
       android:orientation="horizontal"
       android:gravity="center"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <View
           android:layout_marginLeft="10dp"
           android:layout_width="1dp"
           android:layout_marginTop="20dp"
           android:layout_height="match_parent"
           android:paddingLeft="88dp"
           android:paddingRight="88dp"
           android:background="@color/colorPrimaryDark" />
       <TableLayout
           android:layout_width="350dp"
           android:layout_height="wrap_content">
           <View
               android:layout_marginTop="30dp"
               android:layout_width="match_parent"
               android:layout_height="3dp"
               android:background="@color/colorPrimaryDark"/>
           <TableRow
               android:layout_gravity="center_horizontal"
               android:gravity="center"
               android:layout_width="match_parent"
               android:layout_height="20dp">
               <TextView
                   android:layout_height="20dp"
                   android:layout_width="match_parent"
                   android:text="Tax Slabs"
                   android:layout_marginTop="8dp"
                   android:layout_gravity="center_horizontal"
                   android:textAlignment="center"
                   android:textSize="18dp"
                   android:textColor="@color/colorPrimaryDark" />

               <View
                   android:layout_marginLeft="50dp"
                   android:layout_width="1dp"
                   android:layout_height="20dp"
                   android:paddingLeft="88dp"
                   android:paddingRight="88dp"
                   android:layout_marginRight="50dp"
                   android:background="@color/colorPrimaryDark" />
               <TextView
                   android:layout_height="20dp"
                   android:layout_width="match_parent"
                   android:text="Percentage"
                   android:layout_marginTop="8dp"
                   android:layout_gravity="center_horizontal"
                   android:textAlignment="center"
                   android:textSize="18dp"
                   android:textColor="@color/colorPrimaryDark" />
           </TableRow>
           <View
               android:layout_width="match_parent"
               android:layout_height="3dp"
               android:background="@color/colorPrimaryDark"/>
           <TableRow
               android:layout_gravity="center_horizontal"
               android:gravity="center"
               android:layout_width="match_parent"
               android:layout_height="20dp">
               <TextView
                   android:layout_height="20dp"
                   android:layout_width="match_parent"
                   android:text="0 - 2.5 Lac"
                   android:layout_marginTop="8dp"
                   android:layout_gravity="center_horizontal"
                   android:textAlignment="center"
                   android:textSize="18dp"
                   android:textColor="@color/colorPrimaryDark" />

               <View
                   android:layout_marginLeft="50dp"
                   android:layout_width="1dp"
                   android:layout_height="20dp"
                   android:paddingLeft="88dp"
                   android:paddingRight="88dp"
                   android:layout_marginRight="50dp"
                   android:background="@color/colorPrimaryDark" />
               <TextView
                   android:layout_height="20dp"
                   android:layout_width="match_parent"
                   android:text="Nil"
                   android:layout_marginTop="8dp"
                   android:layout_gravity="center_horizontal"
                   android:textAlignment="center"
                   android:textSize="18dp"
                   android:textColor="@color/colorPrimaryDark" />
           </TableRow>
           <View
               android:layout_width="match_parent"
               android:layout_height="3dp"
               android:background="@color/colorPrimaryDark"/>
           <TableRow
               android:layout_gravity="center_horizontal"
               android:gravity="center"
               android:layout_width="match_parent"
               android:layout_height="20dp">
               <TextView
                   android:layout_height="20dp"
                   android:layout_width="match_parent"
                   android:text="2.5 Lac - 3.0 Lac"
                   android:layout_marginTop="8dp"
                   android:layout_gravity="center_horizontal"
                   android:textAlignment="center"
                   android:textSize="18dp"
                   android:textColor="@color/colorPrimaryDark" />

               <View
                   android:layout_marginLeft="50dp"
                   android:layout_width="1dp"
                   android:layout_height="20dp"
                   android:paddingLeft="88dp"
                   android:paddingRight="88dp"
                   android:layout_marginRight="50dp"
                   android:background="@color/colorPrimaryDark" />
               <TextView
                   android:layout_height="20dp"
                   android:layout_width="match_parent"
                   android:text="5%"
                   android:layout_marginTop="8dp"
                   android:layout_gravity="center_horizontal"
                   android:textAlignment="center"
                   android:textSize="18dp"
                   android:textColor="@color/colorPrimaryDark" />
           </TableRow>
           <View
               android:layout_width="match_parent"
               android:layout_height="3dp"
               android:background="@color/colorPrimaryDark"/>
           <TableRow
               android:layout_gravity="center_horizontal"
               android:gravity="center"
               android:layout_width="match_parent"
               android:layout_height="20dp">
               <TextView
                   android:layout_height="20dp"
                   android:layout_width="match_parent"
                   android:text="3.0 Lac - 5.0 Lac"
                   android:layout_marginTop="8dp"
                   android:layout_gravity="center_horizontal"
                   android:textAlignment="center"
                   android:textSize="18dp"
                   android:textColor="@color/colorPrimaryDark" />

               <View
                   android:layout_marginLeft="50dp"
                   android:layout_width="1dp"
                   android:layout_height="20dp"
                   android:paddingLeft="88dp"
                   android:paddingRight="88dp"
                   android:layout_marginRight="50dp"
                   android:background="@color/colorPrimaryDark" />
               <TextView
                   android:layout_height="20dp"
                   android:layout_width="match_parent"
                   android:text="5%"
                   android:layout_marginTop="8dp"
                   android:layout_gravity="center_horizontal"
                   android:textAlignment="center"
                   android:textSize="18dp"
                   android:textColor="@color/colorPrimaryDark" />
           </TableRow>
           <View
               android:layout_width="match_parent"
               android:layout_height="3dp"
               android:background="@color/colorPrimaryDark"/>
           <TableRow
               android:layout_gravity="center_horizontal"
               android:gravity="center"
               android:layout_width="match_parent"
               android:layout_height="20dp">
               <TextView
                   android:layout_height="20dp"
                   android:layout_width="match_parent"
                   android:text="5.0 Lac - 10.0 Lac"
                   android:layout_marginTop="8dp"
                   android:layout_gravity="center_horizontal"
                   android:textAlignment="center"
                   android:textSize="18dp"
                   android:textColor="@color/colorPrimaryDark" />

               <View
                   android:layout_marginLeft="50dp"
                   android:layout_width="1dp"
                   android:layout_height="20dp"
                   android:paddingLeft="88dp"
                   android:paddingRight="88dp"
                   android:layout_marginRight="50dp"
                   android:background="@color/colorPrimaryDark" />
               <TextView
                   android:layout_height="20dp"
                   android:layout_width="match_parent"
                   android:text="20%"
                   android:layout_marginTop="8dp"
                   android:layout_gravity="center_horizontal"
                   android:textAlignment="center"
                   android:textSize="18dp"
                   android:textColor="@color/colorPrimaryDark" />
           </TableRow>
           <View
               android:layout_width="match_parent"
               android:layout_height="3dp"
               android:background="@color/colorPrimaryDark"/>
           <TableRow
               android:layout_gravity="center_horizontal"
               android:gravity="center"
               android:layout_width="match_parent"
               android:layout_height="20dp">
               <TextView
                   android:layout_height="20dp"
                   android:layout_width="match_parent"
                   android:text="Above 10.0 Lac"
                   android:layout_marginTop="8dp"
                   android:layout_gravity="center_horizontal"
                   android:textAlignment="center"
                   android:textSize="18dp"
                   android:textColor="@color/colorPrimaryDark" />

               <View
                   android:layout_marginLeft="50dp"
                   android:layout_width="1dp"
                   android:layout_height="20dp"
                   android:paddingLeft="88dp"
                   android:paddingRight="88dp"
                   android:layout_marginRight="50dp"
                   android:background="@color/colorPrimaryDark" />
               <TextView
                   android:layout_height="20dp"
                   android:layout_width="match_parent"
                   android:text="30%"
                   android:layout_marginTop="8dp"
                   android:layout_gravity="center_horizontal"
                   android:textAlignment="center"
                   android:textSize="18dp"
                   android:textColor="@color/colorPrimaryDark" />
           </TableRow>
           <View
               android:layout_width="match_parent"
               android:layout_height="3dp"
               android:background="@color/colorPrimaryDark"/>
       </TableLayout>
       <View
           android:layout_width="1dp"
           android:layout_marginTop="20dp"
           android:layout_height="match_parent"
           android:paddingLeft="88dp"
           android:paddingRight="88dp"
           android:background="@color/colorPrimaryDark" />
   </LinearLayout>

    <TextView
        android:layout_height="20dp"
        android:layout_width="match_parent"
        android:text="Total Taxable Amount"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/total_taxable"
        android:background="@drawable/border_button"
        android:layout_height="60dp"
        android:layout_width="300dp"
        android:paddingTop="15dp"
        android:text="Hiiiiii"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textColor="@color/colorPrimaryDark"/>

    <Button
        android:id="@+id/calculateTax"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:text="Calculate Tax"
        android:textSize="20dp"
        android:background="@drawable/round_button"/>

    <LinearLayout
        android:id="@+id/tax"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_height="20dp"
            android:layout_width="match_parent"
            android:text="Total Tax to be Paid"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/tax_paid"
            android:background="@drawable/border_button"
            android:layout_height="60dp"
            android:layout_width="300dp"
            android:paddingTop="15dp"
            android:text="Hiiiiii"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textColor="@color/colorPrimaryDark"/>

    </LinearLayout>
    <TextView
        android:id="@+id/tax_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="16dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="10dp"
        android:text="Click to know how to save on tax"/>
</LinearLayout>