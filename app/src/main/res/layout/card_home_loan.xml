<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:onClick="getItemCount" >

        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:id="@+id/bank_logo"
                android:layout_width="113dp"
                android:layout_height="112dp"
                android:padding="4dp"
                android:src="@drawable/bank" />

            <TextView
                android:id="@+id/textViewBankName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/bank_logo"
                android:text="***Bank Name***"
                android:textSize="20sp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textViewInterest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewBankName"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:textColor="#454545"
                android:textSize="18sp"
                android:layout_toRightOf="@id/bank_logo"
                android:text="Interest Rate: x % p.a"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/textViewRrocessing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewInterest"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/bank_logo"
                android:textColor="#454545"
                android:paddingRight="15dp"
                android:text="Processing: 0.5% of amount"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/textViewLVR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewRrocessing"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/bank_logo"
                android:text="Loan-to-Value Ratio: y %"
                android:textSize="18sp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                 />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_below="@id/textViewLVR"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/check_eligibility"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="6dp"
                    android:textSize="18dp"
                    android:text="Eligibility"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_below="@id/textViewLVR"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/colorPrimary"
                    />
                <Button
                    android:id="@+id/check_emi"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="6dp"
                    android:textSize="18dp"
                    android:background="@color/colorPrimary"
                    android:text="EMI Calculator"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_below="@id/textViewLVR"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/check_eligibility"
                    />
            </LinearLayout>




        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>