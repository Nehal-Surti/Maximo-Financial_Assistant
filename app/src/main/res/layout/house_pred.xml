<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:folding-cell="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.ramotion.foldingcell.FoldingCell
        android:id="@+id/folding_cell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_marginTop="30dp"
        folding-cell:backSideColor="@color/colorAccent">
        ​
        <LinearLayout
            android:id="@+id/cell_content_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:padding="8dp"
            android:layout_marginTop="5dp"
            android:visibility="gone">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:background="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="DESCRIPTION"
                    android:textColor="#000000"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"/>
                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:background="#ffffff"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:lineSpacingMultiplier="1.2"
                    android:textColor="#000000"
                    android:text="@string/desc"/>
            </LinearLayout>
        </LinearLayout>
        ​
        <LinearLayout
            android:id="@+id/cell_title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_margin="5dp"
            android:background="@color/colorPrimary">
            <LinearLayout
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:weightSum="12">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/item"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="2dp"
                        android:src="@drawable/search"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="9"
                    android:layout_height="match_parent"
                    android:weightSum="8"
                    android:orientation="vertical">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/area"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:text="3BHK Residential Apartment in Chembur (East)"
                        android:textSize="14dp"
                        android:layout_gravity="center_horizontal"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"
                        android:textAlignment="center"
                        tools:ignore="MissingConstraints" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/flat"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:text="Rustom JI"
                        android:textSize="20dp"
                        android:layout_gravity="center_horizontal"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"
                        android:textAlignment="center"
                        tools:ignore="MissingConstraints" />
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/price_each"
                                android:paddingTop="10dp"
                                android:layout_marginLeft="2dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Rs. 2.25 Cr"
                                android:textSize="14dp"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@color/colorPrimaryDark"
                                android:textAlignment="center"
                                tools:ignore="MissingConstraints" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        ​
    </com.ramotion.foldingcell.FoldingCell>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INVESTMENT PERIOD"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20dp"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter number of years to see the forecast value of the property"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:textSize="12dp"/>

    <EditText
        android:id="@+id/yearsInput"
        android:layout_marginTop="10dp"
        android:hint=""
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:inputType="number"/>

    <Button
        android:id="@+id/predict"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="150dp"
        android:text="PREDICT"
        android:textSize="16dp"
        android:background="@drawable/round_button"
        android:layout_height="50dp"/>

    <LinearLayout
        android:id="@+id/prediction"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:visibility="gone">
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FUTURE VALUATION"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/valuation"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rs. 6500000/-"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="30dp"/>

        <TextView
            android:id="@+id/approx"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Approx 4.2 Cr"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="16dp"
            />
    </LinearLayout>
</LinearLayout>