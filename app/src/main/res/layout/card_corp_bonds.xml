<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:folding-cell="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">â€‹
    <LinearLayout
        android:id="@+id/cell_title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_margin="5dp"
        android:background="@color/colorPrimary">
        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:id="@+id/bank_logo"
                android:layout_width="113dp"
                android:layout_height="150dp"
                android:padding="4dp"
                android:src="@drawable/bonds_item" />

            <TextView
                android:id="@+id/corp_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/bank_logo"
                android:text="***Bank Name***"
                android:textSize="20sp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/corp_coupon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/corp_Name"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:layout_toRightOf="@id/bank_logo"
                android:text="Coupon Rate: x % "
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/corp_rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/corp_coupon"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/bank_logo"
                android:textColor="@color/colorPrimaryDark"
                android:paddingRight="15dp"
                android:text="Buy Value: Rs. 10000"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/corp_nav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/corp_rating"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/bank_logo"
                android:text="Bid: 15-Sep-2020 to 17-Sep-2020"
                android:textSize="16sp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                />
            <TextView
                android:id="@+id/corp_risk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/corp_nav"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/bank_logo"
                android:text="Yield to maturity"
                android:textSize="18sp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                />
            <TextView
                android:id="@+id/corp_coupon_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/corp_risk"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:text="Coupon Payment of Rs. 100.00 every 12 months"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>