<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:layout_width="200dp"
        android:layout_gravity="center"
        android:layout_height="100dp"
        android:src="@drawable/main"/>
    <LinearLayout
        android:background="@drawable/money_layer"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <Button
            android:id="@+id/portfolio"
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/gradient_box"
            android:fontFamily="@font/courgette"
            android:text="Portfolio Creation"
            android:textSize="25dp" />

        <View
            android:layout_marginLeft="10dp"
            android:layout_width="2dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:paddingLeft="88dp"
            android:paddingRight="88dp"
            android:background="@color/colorPrimaryDark" />

        <Button
            android:id="@+id/loans"
            android:layout_marginLeft="20dp"
            android:layout_width="150dp"
            android:text="Loans"
            android:fontFamily="@font/courgette"
            android:textSize="30dp"
            android:background="@drawable/gradient_box"
            android:layout_gravity="center"
            android:layout_height="130dp"/>

    </LinearLayout>
    <LinearLayout
        android:background="@drawable/money_layer"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <Button
            android:id="@+id/bonds"
            android:layout_marginLeft="20dp"
            android:layout_width="150dp"
            android:background="@drawable/gradient_box"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:text="BONDS INVEST"
            android:fontFamily="@font/courgette"
            android:layout_marginRight="20dp"
            android:layout_height="130dp"/>

        <View
            android:layout_marginLeft="10dp"
            android:layout_width="2dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:paddingLeft="88dp"
            android:paddingRight="88dp"
            android:background="@color/colorPrimaryDark" />

        <Button
            android:id="@+id/stocks"
            android:layout_marginLeft="20dp"
            android:layout_width="150dp"
            android:textSize="30dp"
            android:text="STOCKS INVEST"
            android:fontFamily="@font/courgette"
            android:background="@drawable/gradient_box"
            android:layout_gravity="center"
            android:layout_height="130dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="@drawable/money_layer"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <Button
            android:id="@+id/gold"
            android:layout_marginLeft="20dp"
            android:layout_width="150dp"
            android:text="GOLD Invest"
            android:textSize="30dp"
            android:fontFamily="@font/courgette"
            android:background="@drawable/gradient_box"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:layout_height="130dp"/>

        <View
            android:layout_marginLeft="10dp"
            android:layout_width="2dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:paddingLeft="88dp"
            android:paddingRight="88dp"
            android:background="@color/colorPrimaryDark" />

        <Button
            android:id="@+id/house"
            android:layout_marginLeft="20dp"
            android:layout_width="150dp"
            android:text="House Property"
            android:fontFamily="@font/courgette"
            android:textSize="28dp"
            android:background="@drawable/gradient_box"
            android:layout_gravity="center"
            android:layout_height="130dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="@drawable/money_layer"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <Button
            android:id="@+id/mutual"
            android:layout_marginLeft="20dp"
            android:layout_width="150dp"
            android:text="MUTUAL FUNDS"
            android:textSize="30dp"
            android:fontFamily="@font/courgette"
            android:background="@drawable/gradient_box"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:layout_height="130dp"/>

        <View
            android:layout_marginLeft="10dp"
            android:layout_width="2dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:paddingLeft="88dp"
            android:paddingRight="88dp"
            android:background="@color/colorPrimaryDark" />

        <Button
            android:id="@+id/income"
            android:layout_marginLeft="20dp"
            android:layout_width="150dp"
            android:text="Income Tax"
            android:fontFamily="@font/courgette"
            android:textSize="28dp"
            android:background="@drawable/gradient_box"
            android:layout_gravity="center"
            android:layout_height="130dp"/>

    </LinearLayout>



</LinearLayout>