<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/stock_layer" />

    <TextView
        android:id="@+id/port"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stock Market"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="42sp"
        app:fontFamily="sans-serif-condensed-medium"
        android:gravity="center"
        android:layout_marginTop="5dp"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginHorizontal="25dp"
        android:layout_below="@id/port"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent">

            <TextView
                android:id="@+id/txtVw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Predict Price of Stock:"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="22dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:text="You have brought a share and wish to know its price in future? Use this section."
                android:textSize="18dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_below="@id/txtVw"/>

            <Button
                android:id="@+id/calc_emi"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:text="Predict Price"
                android:textColor="@color/colorPrimaryDark"
                android:layout_below="@id/desc"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginHorizontal="25dp"
        android:layout_below="@id/card"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent">

            <TextView
                android:id="@+id/txtVw2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recommend a Portfolio of Stock:"
                android:textStyle="bold"
                android:textSize="22dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/desc2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:text="You have a goal amount in mind and wish to pick the right stocks? Use this section."
                android:textSize="18dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_below="@id/txtVw2"/>

            <Button
                android:id="@+id/calc_emi2"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:text="Recommend Stocks"
                android:textColor="@color/colorPrimaryDark"
                android:layout_below="@id/desc2"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>