<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:scaleType="centerCrop"
        android:src="@drawable/stock_layer"/>


    <TextView
        android:id="@+id/port"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stock Market"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="42sp"
        app:fontFamily="sans-serif-condensed-medium"
        android:gravity="center"
        android:layout_marginTop="5dp"
        />

    <Button
        android:textAlignment="center"
        android:id="@+id/funds_input2"
        android:layout_width="261dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/funds"
        android:text="Stock Name"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:background="@drawable/round_button"
        android:ems="10"
        android:inputType="text" />

    <TextView
        android:id="@+id/funds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sav_input2"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:text="No. of Stocks Purchased"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25dp" />

    <EditText
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:id="@+id/time_input2"
        android:layout_width="261dp"
        android:layout_height="50dp"
        android:layout_below="@id/time2"
        android:layout_gravity="center"
        android:ems="10"
        android:background="@drawable/border_button"
        android:inputType="number" />

    <TextView
        android:id="@+id/time2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/funds_input2"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:text="Days"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25dp" />

    <EditText
        android:textAlignment="center"
        android:id="@+id/sav_input2"
        android:layout_width="256dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/saving"
        android:background="@drawable/border_button"
        android:ems="10"
        android:layout_gravity="center"
        android:inputType="number" />

    <Button
        android:id="@+id/calc_emi3"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/time_input2"
        android:layout_gravity="center"
        android:textSize="18dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/round_button"
        android:text="Predict Future Value"
        android:textColor="@color/colorPrimaryDark" />
</LinearLayout>