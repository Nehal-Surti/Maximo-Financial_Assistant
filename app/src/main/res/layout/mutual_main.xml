<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/mutual_layer" />

        <TextView
            android:id="@+id/port"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mutual Funds"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="42sp"
            app:fontFamily="sans-serif-condensed-medium"
            android:gravity="center"
            android:layout_marginTop="5dp"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_below="@id/port"
            android:layout_marginTop="30dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorAccent">

                <TextView
                    android:id="@+id/txtVw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Regular Mutual Funds"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="22dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:text="Funds that offer dependable and inflation protected income and steady growth."
                    android:textSize="18dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_below="@id/txtVw"/>

                <EditText
                    android:id="@+id/regular_input"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:inputType="number"
                    android:hint="Enter amount here"
                    android:background="@drawable/border_button"/>
                <Button
                    android:id="@+id/regular"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:text="Explore"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_below="@id/desc"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:layout_marginHorizontal="25dp"
            android:layout_below="@id/card"
            android:layout_marginTop="30dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent">

                <TextView
                    android:id="@+id/txtVw2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tax Saving Mutual Funds"
                    android:textStyle="bold"
                    android:textSize="22dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/desc2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:text="Funds that combine wealth creation with tax savings under section 80C."
                    android:textSize="18dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_below="@id/txtVw2"/>

                <EditText
                    android:id="@+id/taxmf_input"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:inputType="number"
                    android:hint="Enter amount here"
                    android:background="@drawable/border_button"/>

                <Button
                    android:id="@+id/taxmf"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:text="EXPLORE"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_below="@id/desc2"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_below="@id/card"
            android:background="@color/colorAccent"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="30dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Growth Mutual Funds"
                    android:textStyle="bold"
                    android:textSize="22dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:text="Diversified equity based funds that will form the core of your long term portfolio."
                    android:textSize="18dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_below="@id/txtVw2"/>

                <EditText
                    android:id="@+id/growth_input"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:inputType="number"
                    android:hint="Enter amount here"
                    android:background="@drawable/border_button"/>
                <RadioGroup
                    android:id="@+id/radio_risk"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_height="40dp"
                    android:layout_width="match_parent">
                    <RadioButton
                        android:buttonTint="@color/white"
                        android:id="@+id/low"
                        android:layout_height="match_parent"
                        android:layout_width="30dp"
                        android:layout_marginLeft="30dp"
                        android:onClick="onRiskSelected"
                        />
                    <TextView
                        android:paddingTop="12dp"
                        android:textSize="16dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="LOW"/>
                    <RadioButton
                        android:buttonTint="@color/white"
                        android:id="@+id/medium"
                        android:layout_height="match_parent"
                        android:layout_width="30dp"
                        android:layout_marginLeft="40dp"
                        android:onClick="onRiskSelected"
                        />
                    <TextView
                        android:paddingTop="12dp"
                        android:textSize="16dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="MEDIUM"
                        />
                    <RadioButton
                        android:buttonTint="@color/white"
                        android:id="@+id/high"
                        android:layout_height="match_parent"
                        android:layout_width="30dp"
                        android:layout_marginLeft="40dp"
                        android:onClick="onRiskSelected"
                        />
                    <TextView
                        android:paddingTop="12dp"
                        android:textSize="16dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="HIGH"
                        />
                </RadioGroup>

                <Button
                    android:id="@+id/growth"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:text="Explore"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_below="@id/desc2"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>