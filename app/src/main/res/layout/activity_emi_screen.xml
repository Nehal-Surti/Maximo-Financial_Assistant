<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:padding="15dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/emi_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EMI Calculated"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24dp"
        android:gravity="center_horizontal"
        android:textStyle="bold"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/emi_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="Rs. XXXXX"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:textSize="50dp"
        android:layout_below="@id/emi_title"/>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp"
        android:gravity="center">

        <TextView
            android:id="@+id/show_emi_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YEAR"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginLeft="0dp"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/show_emi_interest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INTEREST"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginLeft="20dp"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/show_emi_principal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PRINCIPAL"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginLeft="20dp"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/show_emi_remaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REMAINING"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginLeft="20dp"
            android:textSize="16dp"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="5dp"
        android:id="@+id/show_emi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>