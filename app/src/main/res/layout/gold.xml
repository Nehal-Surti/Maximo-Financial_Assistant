<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Today's Rate for 24k per 10 grams"
        android:textSize="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_gravity="center"
        android:gravity="center"/>

    <TextView
        android:id="@+id/current_price_gold"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Rs. 529250"
        android:textSize="45dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_gravity="center"
        android:gravity="center"/>

    <TextView
        android:layout_height="20dp"
        android:layout_width="match_parent"
        android:text="WEIGHTS IN GRAMS"
        android:layout_marginTop="35dp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textColor="@color/colorPrimaryDark"/>

    <EditText
        android:paddingLeft="10dp"
        android:id="@+id/weights_gold"
        android:layout_margin="15dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:inputType="number"
        android:background="@drawable/border_button" />

    <TextView
        android:layout_height="25dp"
        android:layout_width="match_parent"
        android:text="PERIOD IN MONTHS (ex 1 year = 12 months)"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textColor="@color/colorPrimaryDark"/>

    <EditText
        android:id="@+id/period_gold"
        android:paddingLeft="10dp"
        android:layout_margin="15dp"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="50dp"
        android:inputType="number"
        android:textAlignment="center"
        android:background="@drawable/border_button" />

    <Button
        android:id="@+id/calculate_gold"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:text="Calculate Investment"
        android:textSize="20dp"
        android:background="@drawable/round_button"/>

    <LinearLayout
        android:id="@+id/gold_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginTop="30dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Today's value for the investment"
            android:textSize="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center"
            android:gravity="center"/>

        <TextView
            android:id="@+id/today_price"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Rs. 529250"
            android:textSize="45dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center"
            android:gravity="center"/>
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Future value of the investment"
            android:textSize="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center"
            android:gravity="center"/>

        <TextView
            android:id="@+id/future_value"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Rs. 529250"
            android:textSize="45dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>