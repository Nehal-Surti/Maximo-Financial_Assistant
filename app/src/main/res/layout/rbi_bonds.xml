<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="RBI Floating Rate Savings Bonds"
            android:gravity="center"
            android:textSize="30dp"
            android:textColor="@color/colorPrimaryDark"/>
        <TextView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/colorPrimaryDark"
            android:text="@string/rbi1"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="HIGHLIGHTS"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="@color/colorPrimaryDark"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:text="1. Completely Risk Free"
            android:gravity="left"
            android:textSize="18dp"
            android:textColor="@color/colorPrimaryDark"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:text="2. Current Interest Rate 7.15%"
            android:gravity="left"
            android:textSize="18dp"
            android:textColor="@color/colorPrimaryDark"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:text="3. Higher Rate than NSC and Fixed Deposits"
            android:gravity="left"
            android:textSize="18dp"
            android:textColor="@color/colorPrimaryDark"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:text="4. Lockin Period of 7 Years."
            android:gravity="left"
            android:textSize="18dp"
            android:textColor="@color/colorPrimaryDark"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="DOWNSIDE"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="@color/colorPrimaryDark"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:text="1.Returns obtained from the bond are taxable."
            android:gravity="left"
            android:textSize="18dp"
            android:textColor="@color/colorPrimaryDark"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:text="2.Highly Illiquid cannot be easily traded"
            android:gravity="left"
            android:textSize="18dp"
            android:textColor="@color/colorPrimaryDark"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:text="3.No Fixed returns"
            android:gravity="left"
            android:textSize="18dp"
            android:textColor="@color/colorPrimaryDark"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="OUR VIEW ON 54EC"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="@color/colorPrimaryDark"/>
        <TextView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/colorPrimaryDark"
            android:text="@string/rbi7"/>
        <TextView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/colorPrimaryDark"
            android:text="@string/rbi8"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Amount interested to invest"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="@color/colorPrimaryDark"/>
        <EditText
            android:id="@+id/rbi_input"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:inputType="number"
            android:background="@drawable/border_button"/>
        <Button
            android:id="@+id/check_rbi"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:text="Check Investment"
            android:textSize="18dp"
            android:layout_gravity="center"
            android:background="@drawable/round_button"/>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/rbi_linear"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/rbi_coupon"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:text="Coupon Payment of Rs. 100.00 every 12 months"
                android:gravity="left"
                android:textSize="18dp"
                android:textColor="@color/colorPrimary" />
            <TextView
                android:id="@+id/rbi_total_coupon"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:text="Total Coupon over the maturity: Rs. 500.00"
                android:gravity="left"
                android:textSize="18dp"
                android:textColor="@color/colorPrimary"
                android:layout_marginBottom="20dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/form"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="RBI BONDS FORM LINK"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Required Documents: 1. Duly filled in application form (Complete application forms with all pages in full,duly filled in from the investors), 2. Self attested PAN card copy of the investor
, 3. Self attested Address copy of the investor
, 4. Cancelled cheque leaf of the bank which was mentioned in application for interest and maturity payments, 5. No correction / alteration allowed in the application and the corrections if any to be duly authenticated by the investor
"
            android:gravity="center"
            android:textSize="18dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/colorPrimaryDark"/>
    </LinearLayout>
</ScrollView>