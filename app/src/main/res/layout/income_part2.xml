<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
            android:layout_height="23dp"
            android:layout_width="match_parent"
            android:text="Does your company deduct investments under 80"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textColor="@color/colorPrimaryDark"/>
        <RadioGroup
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_height="40dp"
            android:layout_width="match_parent">
            <RadioButton
                android:id="@+id/deducedYes"
                android:layout_height="match_parent"
                android:layout_width="30dp"
                android:layout_marginLeft="120dp"
                android:onClick="onDeduced"
                />
            <TextView
                android:paddingTop="12dp"
                android:textSize="16dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Yes"/>
            <RadioButton
                android:id="@+id/deducedNo"
                android:layout_height="match_parent"
                android:layout_width="30dp"
                android:layout_marginLeft="50dp"
                android:onClick="onDeduced"
                />
            <TextView
                android:paddingTop="12dp"
                android:textSize="16dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="No"
                />
        </RadioGroup>

    <LinearLayout
        android:visibility="gone"
        android:orientation="vertical"
        android:id="@+id/deductions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_height="20dp"
            android:layout_width="match_parent"
            android:text="Yearly Premimums in Life Insurance Policy"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textColor="@color/colorPrimaryDark"/>

        <EditText
            android:id="@+id/LIC"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="number"
            android:background="@drawable/border_button"/>

        <TextView
            android:layout_height="20dp"
            android:layout_width="match_parent"
            android:text="Yearly Investments in PPF/EPF/VPF"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textColor="@color/colorPrimaryDark"/>

        <EditText
            android:id="@+id/PPF"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="number"
            android:background="@drawable/border_button"/>

        <TextView
            android:layout_height="20dp"
            android:layout_width="match_parent"
            android:text="Principal Amount of Housing Loan"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textColor="@color/colorPrimaryDark"/>

        <EditText
            android:id="@+id/principal"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="number"
            android:background="@drawable/border_button"/>

        <TextView
            android:layout_height="45dp"
            android:layout_width="match_parent"
            android:text="Yearly Premiums of Pension Plan in Insurance companies/ Mutual Funds "
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textColor="@color/colorPrimaryDark"/>

        <EditText
            android:id="@+id/pension"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="number"
            android:background="@drawable/border_button"/>

        <TextView
            android:layout_height="20dp"
            android:layout_width="match_parent"
            android:text="Yearly Premiums of National Pension Scheme"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textColor="@color/colorPrimaryDark"/>

        <EditText
            android:id="@+id/nps"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="number"
            android:background="@drawable/border_button"/>

        <TextView
            android:layout_height="20dp"
            android:layout_width="match_parent"
            android:text="Yearly Interest On Higher Eductaion Loan"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textColor="@color/colorPrimaryDark"/>

        <EditText
            android:id="@+id/education"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="number"
            android:background="@drawable/border_button"/>

        <TextView
            android:layout_height="20dp"
            android:layout_width="match_parent"
            android:text="Mediclaim for self and family"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textColor="@color/colorPrimaryDark"/>

        <RadioGroup
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_height="40dp"
            android:layout_width="match_parent">
            <RadioButton
                android:id="@+id/above60_medical"
                android:layout_height="match_parent"
                android:layout_width="30dp"
                android:layout_marginLeft="20dp"
                android:onClick="onMediclaim"
                />
            <TextView
                android:paddingTop="12dp"
                android:textSize="16dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Age Below 60 years"/>
            <RadioButton
                android:id="@+id/below60_medical"
                android:layout_height="match_parent"
                android:layout_width="30dp"
                android:layout_marginLeft="20dp"
                android:onClick="onMediclaim"
                />
            <TextView
                android:paddingTop="12dp"
                android:textSize="16dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Age Above 60 years"
                />
        </RadioGroup>

        <EditText
            android:id="@+id/mediclaim"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="number"
            android:background="@drawable/border_button"/>

        <TextView
            android:layout_height="20dp"
            android:layout_width="match_parent"
            android:text="Treatment for Disable Depenedent"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textColor="@color/colorPrimaryDark"/>

        <RadioGroup
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_height="40dp"
            android:layout_width="match_parent">
            <RadioButton
                android:id="@+id/above60_disable"
                android:layout_height="match_parent"
                android:layout_width="30dp"
                android:layout_marginLeft="20dp"
                android:onClick="onDisableDependent"
                />
            <TextView
                android:paddingTop="12dp"
                android:textSize="16dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Age Below 60 years"/>
            <RadioButton
                android:id="@+id/below60_disable"
                android:layout_height="match_parent"
                android:layout_width="30dp"
                android:layout_marginLeft="20dp"
                android:onClick="onDisableDependent"
                />
            <TextView
                android:paddingTop="12dp"
                android:textSize="16dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Age Above 60 years"
                />
        </RadioGroup>

        <EditText
            android:id="@+id/disable"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="number"
            android:background="@drawable/border_button"/>

        <TextView
            android:layout_height="20dp"
            android:layout_width="match_parent"
            android:text="Self Disability"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textColor="@color/colorPrimaryDark"/>
        <RadioGroup
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_height="40dp"
            android:layout_width="match_parent">
            <RadioButton
                android:id="@+id/self_yes"
                android:layout_height="match_parent"
                android:layout_width="30dp"
                android:layout_marginLeft="120dp"
                android:onClick="onDisable"
                />
            <TextView
                android:paddingTop="12dp"
                android:textSize="16dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Yes"/>
            <RadioButton
                android:id="@+id/self_no"
                android:layout_height="match_parent"
                android:layout_width="30dp"
                android:layout_marginLeft="50dp"
                android:onClick="onDisable"
                />
            <TextView
                android:paddingTop="12dp"
                android:textSize="16dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="No"
                />
        </RadioGroup>
    </LinearLayout>
        <Button
            android:id="@+id/part2next"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal"
            android:text="NEXT"
            android:textSize="20dp"
            android:background="@drawable/round_button"/>
    </LinearLayout>
</ScrollView>